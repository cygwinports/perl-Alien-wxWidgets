NAME="perl-Alien-wxWidgets"
VERSION=0.62
RELEASE=1
DESCRIPTION="Perl module for detecting wxWidgets system configurations"
CPAN_AUTHOR=mdootson
WX_VERSION=2.8
WX_TOOLKIT=gtk2
inherit perl wxwidgets

PATCH_URI="
	0.37-dlext.patch
	0.51-cygwin.patch
"

REQUIRES="libwx_gtk2u2.8-devel"

src_compile() {
	lndirs
	cd ${B}
	perl_compile --no-build_wx
}
